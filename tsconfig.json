{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "ES2019"
    ],
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "./**/*.ts",
  ]
}
