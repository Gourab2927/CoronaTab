{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/@types"
    ]
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json"
  ]
}
